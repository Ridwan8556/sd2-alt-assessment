doctype html
html
  head
    meta(charset="utf-8")
    title Students
    style.
      ul { list-style: none; padding: 0; }
      li { margin: 6px 0; }
      a { display: inline-block; padding: 8px 12px; background: #f0f0f0; border: 1px solid #ccc; border-radius: 4px; text-decoration: none; color: #0000EE; font-weight: 600; }
      a:hover { background: #e6e6e6; }
  body
    h1 Students
    ul
      each s in rows
        li
          a(href="#") #{s.name} (#{s.age})

